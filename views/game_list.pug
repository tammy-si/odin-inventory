extends layout

block content
  div(class="content")
    section(class="jumbotron text-center")
      div(class="container")
        hi(class="jumbotron-heading") Games
    div(class="album py-5 bg-light")
      div(class="container")
        div(class="row")
          for game in allGames 
            div(class="col-md-4")
              div(class="card mb-4 box-shadow")
                img(src=game.img_url class="card-img-top")
                div(class="card-body")
                  p(class="card-text") #{game.title}
                  div(class="d-flex justify-content-between align-items-center")
                    a(class="btn btn-primary" href=game.url) View details
      a(href="/store/games/add" class="btn btn-primary" role="button") Add a Game
