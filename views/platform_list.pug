extends layout

block content
  div(class="content")
    section(class="jumbotron text-center")
      div(class="container")
        hi(class="jumbotron-heading")  #{title}
    div(class="album py-5 bg-light")
      div(class="container")
        div(class="row")
          for platform in allPlatforms 
            div(class="col-md-4")
              div(class="card mb-4 box-shadow")
                img(src=platform.img_url class="card-img-top")
                div(class="card-body")
                  p(class="card-text") #{platform.name}
                  div(class="d-flex justify-content-between align-items-center")
                    a(class="btn btn-primary" href=platform.url) View details
      a(href="/store/platforms/add" class="btn btn-primary" role="button") Add a Platform
